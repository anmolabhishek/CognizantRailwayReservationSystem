@model RailwayReservationSystem.Models.Payment_Details


<!DOCTYPE html>

<html >
<head>
    <meta charset="utf-8" />

    <style>
        * {
            margin: 0;
            padding: 0;
            border: 0;
            font-size: 70%;
            font: inherit;
            vertical-align: baseline;
        }


        body {
            width: 100%;
            background-color: #efefef;
            /*font-family: 'kredit', 'Impact', sans-serif;*/
            text-transform: uppercase;
        }

        main {
            margin: 20px auto;
            width: 500px;
            height: 500px;
        }

        h1 {
            text-align: center;
            font-size: 10px;
            /*    font-weight: bold;*/
            /*    font-family:'kredit back'*/
        }

        h2 {
            text-align: center;
            font-size: 7px;
        }

        #cc {
            margin: 20px auto;
            border: solid black 1px;
            width: 86%;
            height: 53%;
            background: linear-gradient(to right,rgba(14, 14, 14, 1) 0%,rgba(125, 126, 125, 1) 100%);
