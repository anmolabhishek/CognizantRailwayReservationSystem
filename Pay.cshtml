            box-shadow: 5px 5px 5px #888888;
        }

        .rule {
            color: blue;
            font-size: 20px;
            font-weight: 700;
        }

        img {
            width: 25%;
            float: right;
            margin: 20px 20px;
        }

        p {
            font-size: 9px;
            color: black;
            font-weight: 700;
        }

        #Tcard {
            margin-top: 7px;
            margin-bottom: 7px;
        }

        #card {
            margin-top: 40px;
            margin-bottom: 7px;
        }

        #name {
            margin-bottom: 7px;
        }

        #exp {
            width: 40%;
            float: left
        }

        #cvc {
            width: 40%;
            float: left;
        }

        input {
            border: none;
            background: none;
            border: solid black;
            width: 40%;
            margin-left: 50px;
            float: left;
            font-family: inherit;
            font-size: 9px;
            font-weight: lighter;
            color: #FFF;
            text-transform: capitalize;
        }

            /*input:focus {
