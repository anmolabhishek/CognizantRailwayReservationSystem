<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background: linear-gradient(to left, #7787f1, #473ce9);
        }

        li {
            float: left;
        }

            li a {
                display: block;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                li a:hover:not(.active) {
                    background-color: #fff;
                    color: #473ce9;
                    border: 0.5px solid #473ce9;
                }

        .active {
            background-color: blue;
            color: #fff;
            width: 60px;
        }
    </style>
</head>
<body>
    <div @*class="navbar navbar-inverse navbar-fixed-top"*@>
        @*<div class="container">*@
            @*<div class="navbar-header">*@
                @*<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>*@
                @*<ul>
            <li><a href="#home">Home</a></li>
            <li><a href="#news">About</a></li>

            <li style="float:right"><a class="active" href="#about">Log Out</a></li>
        </ul>*@
                
            @*</div>*@
            <div style="margin-top:-55px;" @*class="navbar-collapse collapse"*@>
                <ul  @*class="nav navbar-nav"*@>
                    <li>@Html.ActionLink("Cognizant Railways", "Search", "Booking", new { area = "" }, new { @class = "navbar-brand" })</li>
                    
                    <li>@Html.ActionLink("Booking History", "History", "BookingHistory", new { area = "" }, new { @class = "navbar-brand" })</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li style="color:#fff; display:flex; align-self:center; justify-content:center;margin-top:14px;">Hello- @User.Identity.Name</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "Account", new { @style = "float:right;" })</li>
                    }
                </ul>
            </div>
        </div>
    @*</div>*@

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Cognizant Railways</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>